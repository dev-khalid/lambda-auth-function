{
  "name": "lambda-auth-function",
  "version": "1.0.0",
  "description": "A simple Express.js application to handle authentication via access token.",
  "main": "src/app.ts",
  "scripts": {
    "start": "node index.js",
    "build": "tsc",
    "dev": "ts-node-dev src/app.ts",
    "build:lambda": "tsc && cp package*.json dist/",
    "package": "npm run build:lambda && cd dist && npm ci --omit=dev && zip -r ../lambda-function.zip .",
    "test": "node test.js"
  },
  "dependencies": {
    "@types/aws-lambda": "^8.10.152",
    "aws-serverless-express": "^3.4.0",
    "express": "^4.17.1",
    "serverless-http": "^3.2.0"
  },
  "devDependencies": {
    "@types/aws-serverless-express": "^3.3.10",
    "@types/express": "^4.17.13",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4"
  },
